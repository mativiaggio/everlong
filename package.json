{
  "name": "everlong",
  "version": "1.0.0",
  "description": "Everlong es el proyecto final del curso de backend de CoderHouse, Everlong es un ecommerce.",
  "main": "server.js",
  "type": "module",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "basic:dev": "nodemon --watch src --watch views --ext js,json,handlebars,css --exec \"node src/server/server.js\"",
    "dev": "nodemon --watch src --watch views --ext js,json,handlebars,css --exec \"npm run build:css && node src/server/server.js\"",
    "build:css": "postcss src/public/css/tailwind.css -o src/public/css/styles.css",
    "start": "node src/server/server.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/mativiaggio/everlong.git"
  },
  "keywords": [
    "ecommercer",
    "everlong",
    "coderhouse",
    "backend",
    "admin",
    "panel"
  ],
  "author": "Matias Viaggio (@harto_dev)",
  "license": "MPL-2.0",
  "bugs": {
    "url": "https://github.com/mativiaggio/everlong/issues"
  },
  "homepage": "https://github.com/mativiaggio/everlong#readme",
  "devDependencies": {
    "autoprefixer": "^10.4.19",
    "nodemon": "^3.1.0",
    "postcss": "^8.4.38",
    "tailwindcss": "^3.4.3"
  },
  "dependencies": {
    "bcrypt": "^5.1.1",
    "chart.js": "^4.4.3",
    "connect-flash": "^0.1.1",
    "connect-mongo": "^5.1.0",
    "cookie-parser": "^1.4.6",
    "crypto": "^1.0.1",
    "dotenv": "^16.4.5",
    "express": "^4.19.2",
    "express-handlebars": "^7.1.2",
    "express-session": "^1.18.0",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^8.4.0",
    "multer": "^1.4.5-lts.1",
    "nodemailer": "^6.9.14",
    "passport": "^0.7.0",
    "passport-github2": "^0.1.12",
    "passport-local": "^1.0.0",
    "postcss-cli": "^11.0.0",
    "winston": "^3.13.0"
  }
}
